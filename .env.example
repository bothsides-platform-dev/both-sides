# Kakao SDK
NEXT_PUBLIC_KAKAO_JS_KEY=your_kakao_javascript_key_here
NEXT_PUBLIC_KAKAO_TEMPLATE_ID=your_kakao_template_id_here

# SerpAPI (Google Trends)
SERPAPI_KEY=your_serpapi_key_here

# ============================================
# LLM Provider Configuration
# ============================================

# Encryption key for storing API keys in database (required)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_string_here

# Provider selection: 'openai' or 'google'
# Default: openai
LLM_PROVIDER=openai

# OpenAI Configuration (fallback if not configured in admin UI)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_SUMMARIZE=gpt-4o-mini
OPENAI_MODEL_GENERATE=gpt-4o-mini

# Timeout for LLM requests (milliseconds)
LLM_TIMEOUT_MS=30000
